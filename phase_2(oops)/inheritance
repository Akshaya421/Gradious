/* inheritance topic:
Gaming doamin
   create subclass "videoGame" and "boardGame" from Game class
     ->add the foolowing properties to videogame class 
               platform
               genre
     -> add the following property to Boardgaes class
          num_of_players
         avg_play_time
     ->add getter and setter methods for the properties
     ->override displayGameinfo with additional information
 
*/

class Gameclass{ 

    String gameName; 

    int releaseyr; 

    public void setvalues(String gameName ,int releaseyr){ 

       this.gameName=gameName; 

       this.releaseyr=releaseyr; 

    } 

    public String getgameName(){ 

        return gameName; 

    } 

    public int getreleaseyr(){ 

        return releaseyr; 

    } 

    public void display(){ 

    System.out.println("Game Name:"+gameName+"\nrelease yr:"+releaseyr); 

 

    } 

    

} 

 
 

class VideoGame extends Gameclass{ 

    String platform,genre; 

    public void setvalues(String platform,String genre){ 

       this.platform=platform; 

       this.genre=genre; 

    } 

    public String getplatform(){ 

        return platform; 

    } 

    public String getgenre(){ 

        return genre; 

    } 

    @Override 

    public void display(){ 

        super.display(); 

        System.out.println("platform:"+platform+"\n"+"genre:"+genre); 

    } 

 

} 

class BoardGame extends Gameclass{ 

    int players,avgtime; 

    public void setvalues(int players,int avgtime){ 

       this.players=players; 

       this.avgtime=avgtime; 

    } 

    public int getplayers(){ 

        return players; 

    } 

    public int getavgtime(){ 

        return avgtime; 

    } 

    @Override 

    public void display(){ 

        super.display(); 

        System.out.println("no of players:"+players+"\n"+"avg time:"+avgtime); 

    } 

} 

class Game{ 

    public static void main(String args[]){ 

 

        VideoGame v = new VideoGame(); 

        System.out.println("this is video game info"); 

        v.setvalues("pubg online",2015); 

        v.setvalues("pubg ","Battle royale"); 

        v.display(); 

 

        BoardGame b=new BoardGame(); 

        System.out.println("\n this is board game info"); 

        b.setvalues("chess",1990); 

        b.setvalues(2,15); 

        b.display(); 

         

    } 

 

} 

